# start i3bar to display a workspace bar
bar {
    status_command          i3blocks
    bindsym button4         nop
    bindsym button5         nop
    position                top
    tray_output             primary
    separator_symbol        " "
    workspace_buttons       yes
    strip_workspace_numbers no

    colors {
        background $base0A
        separator  $base00
        statusline $base0A

        # State             Border  BG      Text
        focused_workspace   $base0A $base0A $base0d
        inactive_workspace  $base0A $base0A $base01
        urgent_workspace    $base08 $base08 $base01
        binding_mode        $base00 $base0A $base01
    }
}


